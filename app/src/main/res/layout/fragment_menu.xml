<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activity_main_menu_logo"
                android:layout_width="68.0dip"
                android:layout_height="68.0dip"
                android:src="@drawable/img_1"
                 />

            <TextView
                android:id="@+id/activity_main_menu__name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="10.0dip"
                android:gravity="center_vertical"
                android:textColor="#ffffffff"
                android:text="用户昵称"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_centerInParent="true"
            android:layout_weight="3.0"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/menu_feedBack"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="feedBack"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img11"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/left_menu_feedback_btn" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img11"
                    android:text="意见反馈" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu_aboutUs"
                android:onClick="aboutUs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img2"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/left_menu_about_btn" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img2"
                    android:text="关于我们" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu_myMessage"
                android:onClick="myMessage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img6"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/message" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img6"
                    android:text="我的消息" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu_commonQuestion"
                android:onClick="commonQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img5"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/btn_help" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img5"
                    android:text="常见问题" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/menu_clearCashe"
                android:onClick="clearCashe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img3"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/left_menu_trash_btn" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img3"
                    android:text="清除缓存" />
            </RelativeLayout>

            <RelativeLayout
                 android:id="@+id/menu_quit"
                android:onClick="quit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/activity_main_menu_temp_img4"
                    style="@style/imageview_for_leftmenu"
                    android:src="@drawable/left_menu_logout_btn" />

                <TextView
                    style="@style/textview_in_leftmenu"
                    android:layout_toRightOf="@id/activity_main_menu_temp_img4"
                    android:text="退出登录" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>