<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/sence_setting_share_titlebar"
       ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="#99ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:text="分享缩略图"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:onClick="onClickEditTitle"
        android:gravity="center_vertical"
        android:background="#99ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:text="初页标题"
            android:layout_weight="1"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tv_setting_share_info_title"
            android:layout_width="wrap_content"
            android:text="我的初页"
            android:textSize="20dp"
            android:textColor="#000000"
            android:maxWidth="200dp"

            android:layout_height="wrap_content"
            android:singleLine="true" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"></LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:onClick="onClickEditContent"
        android:gravity="center_vertical"
        android:background="#99ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:text="初页描述"


            android:layout_weight="1"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_setting_share_info_content"
            android:layout_width="wrap_content"
            android:text="每一页，都美若人生初见"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:singleLine="true" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
</LinearLayout>
