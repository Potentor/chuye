<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hulian.firstpage.activity.ShowSenceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"

            android:background="@drawable/back_btn_normal" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv"
            android:id="@+id/tv_show_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的初页"
            android:textColor="#e96f25"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的初页"
            android:layout_centerInParent="true"
            android:textColor="#e0000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/share_btn_normal"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/sence_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>

        <ImageView

            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/iv_edit_sence"
            android:src="@drawable/edit_btn_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"

            />


    </RelativeLayout>


</LinearLayout>
